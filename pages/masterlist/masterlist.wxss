.masterheader{
   display: flex;
    justify-content: space-between;
    padding-right:30px;
    padding-left: 30px;
  
}
.masterheader text{
    font-size: 18px;
    line-height: 20px;
}
.masterheader image{
    width: 20px;
    height: 20px;
   
}
.mastercount{
    margin: 10px;
    display: flex;
    justify-content: space-around
}
.masterlist{
    width: 90%;
    /* border: 1px solid rebeccapurple; */
    border-radius:15px;
   box-shadow: 0px 2px 5px #BCBCBC; 
}

.masterlist image {
  border-top-left-radius:15px;
  border-top-right-radius:15px;
  width:100%;
  height: 130px;
}
.masterlist text{
  display: block;
  padding-left: 10px;
  padding-bottom: 5px;

}
.mastername{

.houreshead{
    
  display: flex;
  justify-content: space-between;
  padding-left: 20px;
  padding-right: 20px;
}
.houreshead image{
    width: 20px;
    height: 20px;
}
/* 选项卡 */
.head{
  background: #fff;
  position: sticky;
  top: 0; 
  padding:10px;
 
}
.swiper-tab{

    width: 100%;
    text-align: center;
    height: 55rpx;
    line-height: 55rpx;
    display: flex;
    align-items: center;
    flex-flow: row;
    justify-content: space-between;
  
}
.swiper-tab-item{
    width: 25%; 
    color:#434343;
    
}
.active{

    color:#000;
    
    border: 4rpx solid #BCBCBC;
   
    border-radius:50px; 
}
swiper{
  text-align: center;
}




